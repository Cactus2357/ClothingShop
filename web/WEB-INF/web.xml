<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
  <context-param>
    <param-name>file.location</param-name>
    <param-value>D:/Code/Apache NetBeans/OnlineClothingShop/upload</param-value>
  </context-param>

  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>home</welcome-file>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>
  <error-page>
    <location>/WEB-INF/misc/error-page.jsp</location>
  </error-page>

  <servlet-mapping>
    <servlet-name>ResetPassword</servlet-name>
    <url-pattern>/reset-password</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>com.cso.shop.filter.UserFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>com.cso.shop.filter.AuthenticationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>com.cso.shop.filter.AdminFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/profile</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/category</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/product</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AdminFilter</filter-name>
    <url-pattern>/users</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>ProductList</servlet-name>
    <servlet-class>com.cso.shop.control.page.ProductList</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductDetail</servlet-name>
    <servlet-class>com.cso.shop.control.page.ProductDetail</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CategoryControl</servlet-name>
    <servlet-class>com.cso.shop.control.admin.CategoryControl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserList</servlet-name>
    <servlet-class>com.cso.shop.control.admin.UserList</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductReview</servlet-name>
    <servlet-class>com.cso.shop.control.account.UserReview</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ResetPassword</servlet-name>
    <servlet-class>com.cso.shop.control.account.ResetPassword</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductList</servlet-name>
    <url-pattern>/product-list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductDetail</servlet-name>
    <url-pattern>/product-detail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoryControl</servlet-name>
    <url-pattern>/category</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserList</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductReview</servlet-name>
    <url-pattern>/review</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChangePassword</servlet-name>
    <servlet-class>com.cso.shop.control.account.ChangePassword</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Signout</servlet-name>
    <servlet-class>com.cso.shop.control.account.Signout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>com.cso.shop.control.admin.ProductControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Profile</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangePassword</servlet-name>
    <url-pattern>/change-password</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Signout</servlet-name>
    <url-pattern>/signout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Signin</servlet-name>
    <servlet-class>com.cso.shop.control.account.Signin</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Signup</servlet-name>
    <servlet-class>com.cso.shop.control.account.Signup</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>com.cso.shop.control.page.Home</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Profile</servlet-name>
    <servlet-class>com.cso.shop.control.account.Profile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Signin</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
</web-app>
